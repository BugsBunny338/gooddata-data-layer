{
  "name": "@gooddata/data-layer",
  "version": "2.0.2",
  "description": "",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "typings": "dist/index.d.ts",
  "dependencies": {
    "json-stable-stringify": "1.0.1",
    "lodash": "4.17.4"
  },
  "devDependencies": {
    "@types/jest": "18.1.1",
    "@types/lodash": "4.14.61",
    "@types/node": "7.0.8",
    "jest": "21.0.0",
    "jest-junit": "3.0.0",
    "ts-jest": "21.0.0",
    "tslint": "5.4.3",
    "tslint-config-gooddata": "0.0.2",
    "typescript": "2.4.2"
  },
  "scripts": {
    "test": "jest --watch",
    "dev": "rm -rf dist && tsc -d --outDir dist --watch",
    "prepublish": "rm -rf dist && tsc -d --outDir dist",
    "tslint": "tslint --format verbose --config tslint.json index.ts src/**/*.ts",
    "tslint-ci": "mkdir -p ./ci/results && tslint --config tslint.json --format checkstyle --out ./ci/results/tslint-results.xml index.ts src/**/*.ts",
    "validate": "tsc -p tsconfig.base.json --noEmit && yarn tslint",
    "validate-ci": "tsc -p tsconfig.base.json --noEmit && yarn tslint-ci"
  },
  "author": "GoodData",
  "license": "SEE LICENSE IN LICENSE.txt",
  "jest": {
    "transform": {
      ".(ts|tsx)": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
